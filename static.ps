    closepath
    fill

    grestore
    colorLightBlue
    stroke

    % Right wall
    colorMidBlue
    newpath
    3840 0 moveto
    3120 360 lineto
    3120 1560 lineto
    3840 2160 lineto
    gsave
    closepath
    fill

    grestore
    colorLightBlue
    stroke

