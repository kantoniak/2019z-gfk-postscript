%!

%%% Colors 

/setRGB {
    /b exch def
    /g exch def
    /r exch def
    r 255 div g 255 div b 255 div setrgbcolor
} def

% Aquarium
/colorDarkBlue {
    0 79 139 setRGB
} def

/colorMidBlue {
    0 95 158 setRGB
} def

/colorLightBlue {
    0 104 173 setRGB
} def

/colorSand {
    240 177 0 setRGB
} def

% Fish
/colorFish {
    255 255 0 setRGB
} def

/colorFishFin {
    170 0 0 setRGB
} def

/colorFishGills {
    177 84 24 setRGB
} def

% Standard line width
/standardLine {
    10 setlinewidth
    1 setlinecap
    1 setlinejoin
} def
