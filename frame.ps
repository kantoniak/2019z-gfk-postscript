%!

(data-ps/colors.ps) run
(data-ps/debug.ps) run
(data-ps/static.ps) run
(data-ps/reef.ps) run
(data-ps/fish.ps) run
(data-ps/fish-movement.ps) run

/renderFrame {
    % Aquarium
    renderAquarium

    % Coral reef - back
    gsave
    2580 360 translate
    -1 1 scale
    colorReefFar
    5 16 1 renderReef
    grestore

    % Coral reef - back - stones
    gsave
    colorStoneFar
    2630 300 translate
    renderSmallStone
    grestore

    gsave
    colorLightStoneFar
    2450 240 translate
    -1 1 scale
    renderSmallStone
    grestore

    % Fish in the middle
    gsave
    frameWidth 2 div frameHeight 2 div 120 sub translate
    
        t 2 translateAndScaleFishMovement
        renderFishObject
        grestore
        
        debug 1 eq {
            t 2 renderDebugFishPath
        } if
    
    grestore

    % Coral reef - front
    gsave
    600 180 translate
    colorReef
    5 15 1 renderReef
    grestore

    % Coral reef - front - stones
    gsave
    colorStone
    450 120 translate
    -1 1 scale
    renderSmallStone
    grestore

    gsave
    colorLightStone
    630 60 translate
    renderSmallStone
    grestore

} def

/debug 1 def

renderFrame
showpage
